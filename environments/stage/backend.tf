terraform {
  required_version = ">= 1.6.0"

  backend "s3" {
    bucket       = "mlops-tf-state-prod1"
    key          = "stage/terraform.tfstate"
    region       = "ap-south-1"
    use_lockfile = true
    encrypt      = true
  }

  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.100"
    }
  }
}
